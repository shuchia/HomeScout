# HomeScout Backend Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED - Core Settings
# ===========================================

# Claude API key for AI-powered apartment scoring
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Frontend URL for CORS configuration
FRONTEND_URL=http://localhost:3000


# ===========================================
# DATABASE - PostgreSQL (Optional)
# ===========================================
# Set USE_DATABASE=true to enable database mode
# When disabled, the API uses the static apartments.json file

USE_DATABASE=false
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/homescout

# Enable SQL query logging (for debugging)
SQL_ECHO=false


# ===========================================
# REDIS - Task Queue (Optional)
# ===========================================
# Required for Celery background tasks

REDIS_URL=redis://localhost:6379/0


# ===========================================
# DATA COLLECTION - Scrapers (Optional)
# ===========================================

# Enable/disable scraping functionality
ENABLE_SCRAPING=false

# Apify - For rental listing scraping
# Get your token at: https://console.apify.com/account/integrations
APIFY_API_TOKEN=your_apify_token_here

# Actor IDs (use ~ for actors owned by other users)
APIFY_ZILLOW_ACTOR_ID=maxcopell~zillow-scraper
APIFY_APARTMENTS_ACTOR_ID=epctex~apartments-scraper-api
APIFY_REALTOR_ACTOR_ID=epctex~realtor-scraper
APIFY_RENT_ACTOR_ID=jupri~rent-com-scraper

# ScrapingBee - For Craigslist and local sites
# Get your key at: https://www.scrapingbee.com/
SCRAPINGBEE_API_KEY=your_scrapingbee_key_here


# ===========================================
# AWS S3 - Image Caching (Optional)
# ===========================================
# For caching apartment images to improve load times

AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2
S3_BUCKET_NAME=homescout-images

# CloudFront distribution (optional, for faster image delivery)
CLOUDFRONT_DOMAIN=your-distribution.cloudfront.net


# ===========================================
# MONITORING & ALERTS (Optional)
# ===========================================

# Slack webhook for alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz

# Email alerts
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_TO=alerts@example.com
ALERT_EMAIL_FROM=homescout@example.com


# ===========================================
# SUPABASE - User Authentication & Data
# ===========================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_WEBHOOK_SECRET=generate-a-random-secret-here
